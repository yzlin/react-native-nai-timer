{
  "name": "react-native-nai-timer",
  "version": "0.2.1",
  "description": "react-native-nai-timer",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index",
  "exports": {
    ".": {
      "default": "./lib/commonjs/index.js",
      "import": "./lib/module/index.js",
      "types": "./lib/typescript/index.d.ts",
      "react-native": "./src/index.ts"
    },
    "./package.json": "./package.json",
    "./app.plugin.js": "./app.plugin.js"
  },
  "files": [
    "src",
    "react-native.config.js",
    "lib",
    "nitrogen",
    "android/build.gradle",
    "android/gradle.properties",
    "android/fix-prefab.gradle",
    "android/CMakeLists.txt",
    "android/src",
    "ios/**/*.h",
    "ios/**/*.m",
    "ios/**/*.mm",
    "ios/**/*.cpp",
    "ios/**/*.swift",
    "plugin/build",
    "app.plugin.js",
    "nitro.json",
    "*.podspec",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf lib && bun typecheck && bob build",
    "build:plugin": "expo-module prepare plugin",
    "postinstall": "tsc || exit 0;",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf android/build node_modules/**/android/build lib plugin/build",
    "lint": "biome check . --fix",
    "lint-ci": "biome check .",
    "release": "release-it",
    "typescript": "tsc",
    "specs": "typescript && nitrogen --logLevel=\"debug\""
  },
  "keywords": [
    "react-native",
    "nitro"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yzlin/react-native-nai-timer.git"
  },
  "author": "Ethan Lin <yzlin1985@gmail.com> (https://github.com/yzlin)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yzlin/react-native-nai-timer/issues"
  },
  "homepage": "https://github.com/yzlin/react-native-nai-timer#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@tsconfig/react-native": "^3.0.7",
    "@types/jest": "^29.5.12",
    "@types/react": "^19.1.03",
    "expo": "^54.0.0",
    "expo-module-scripts": "^5.0.7",
    "nitrogen": "*",
    "react": "19.1.1",
    "react-native": "0.82.0",
    "react-native-builder-bob": "^0.40.13",
    "react-native-nitro-modules": "*",
    "typescript": "^5.8.3",
    "ultracite": "5.6.2"
  },
  "peerDependencies": {
    "expo": ">=54.0.0",
    "react": "*",
    "react-native": "*",
    "react-native-nitro-modules": "*"
  },
  "peerDependenciesMeta": {
    "expo": {
      "optional": true
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "semi": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "release-it": {
    "npm": {
      "publish": true
    },
    "git": false,
    "github": {
      "release": false
    },
    "hooks": {
      "before:init": "bun typecheck && bun lint",
      "after:bump": "bun run build"
    }
  }
}
